@using Microsoft.AspNetCore.Mvc.Localization
@using LibaryManagment
@inject IHtmlLocalizer<SharedResource> Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management System</title>

    <link rel="stylesheet" href="/css/HomeIndex.css">
</head>
<body>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>@Localizer["WelcomeMessage"]</h1>
            <p>@Localizer["WelcomeTitle"]</p>
        </div>
        <div class="wave">
            <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
                <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="shape-fill"></path>
            </svg>
        </div>
    </section>

    <!-- Main Content -->
    <div class="container">
        <div class="section-header">
            @* <h2>Library Management System</h2> *@
            <h2>@Localizer["LibrarySystem"]</h2>
            @* <p>Efficiently manage all aspects of your library operations</p> *@
            
        </div>

        <div class="management-grid">
            <!-- Books -->
            <div class="management-card" onclick="location.href='/Book/Index'">
                <div class="icon-wrapper">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M18 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zM6 4h5v8l-2.5-1.5L6 12V4z"/>
                    </svg>
                </div>
                @* <h3>Books</h3> *@
                <h3>@Localizer["HomeBookCardTitle"]</h3>
                @* <p>Catalog and track your entire book collection with ease</p> *@
                <p>@Localizer["HomeBookCardDesc"]</p>
                @* <a href="/Book/Index" class="btn">Manage Books</a> *@
                <a href="/Book/Index" class="btn">@Localizer["HomeBookCardBtn"]</a>
            </div>
            
            <!-- Authors -->
            <div class="management-card" onclick="location.href='/Author/Index'">
                <div class="icon-wrapper">
                    <!-- SVG Icon: Feather Pen / Quill -->
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                    </svg>
                </div>
                @* <h3>Authors</h3> *@
                <h3>@Localizer["HomeAuthorsCardTitle"]</h3>
                @* <p>Curate author profiles, biographies, and link them to their works</p> *@
                <p>@Localizer["HomeAuthorsCardDesc"]</p>
                @* <a href="/Author/Index" class="btn">Manage Authors</a> *@
                <a href="/Author/Index" class="btn">@Localizer["HomeAuthorsCardBtn"]</a>
            </div>
            
            @if (User.IsInRole("admin") || User.IsInRole("lib"))
            {
                <!-- Students -->
                <div class="management-card" onclick="location.href='/Student/Index'">
                    <div class="icon-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        </svg>
                    </div>
                    @* <h3>Students</h3> *@
                    <h3>@Localizer["HomeStudentCardTitle"]</h3>
                    @* <p>Manage student records, enrollments, and maintain accurate information</p> *@
                    <p>@Localizer["HomeStudentCardDesc"]</p>
                    @* <a href="/Student/Index" class="btn">Manage Students</a> *@
                    <a href="/Student/Index" class="btn">@Localizer["HomeStudentCardBtn"]</a>
                </div>
                
                <!-- Borrowing -->
                <div class="management-card" onclick="location.href='/Borrowing/Index'">
                    <div class="icon-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M9 11H7v2h2v-2zm4 0h-2v2h2v-2zm4 0h-2v2h2v-2zm2-7h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z"/>
                        </svg>
                    </div>
                    @* <h3>Borrowing</h3> *@
                    <h3>@Localizer["HomeBorrowingCardTitle"]</h3>
                    @* <p>Track book loans, returns, and manage borrowing schedules</p> *@
                    <p>@Localizer["HomeBorrowingCardDesc"]</p>
                    @* <a href="/Borrowing/Index" class="btn">Manage Borrowing</a> *@
                    <a href="/Borrowing/Index" class="btn">@Localizer["HomeBorrowingCardBtn"]</a>
                </div>
            }
            @if (User.IsInRole("admin"))
            {
                <!-- Librarians -->
                <div class="management-card" onclick="location.href='/Librarian/Index'">
                    <div class="icon-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
                        </svg>
                    </div>
                    @* <h3>Librarians</h3> *@
                    <h3>@Localizer["HomeLibrariansCardTitle"]</h3>
                    @* <p>Oversee staff management and coordinate library operations</p> *@
                    <p>@Localizer["HomeLibrariansCardDesc"]</p>
                    @* <a href="/Librarian/Index" class="btn">Manage Librarians</a> *@
                    <a href="/Librarian/Index" class="btn">@Localizer["HomeLibrariansCardBtn"]</a>
                </div>
            }
            
        </div>
    </div>
</body>
</html>