@{
    ViewData["Title"] = "Home";
}

<!-- Banner -->
<div class="banner position-relative text-white text-center" style="background-image: url('/images/banner1.jpg'); height: 60vh; background-size: cover; background-position: center;">
    <div class="overlay position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 d-flex justify-content-center align-items-center">
        <div>
            <h1 class="display-4">Welcome to Our Library</h1>
            <p class="lead">Learn. Grow. Achieve.</p>
        </div>
    </div>
</div>

<!-- Cards Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Managing Students, Books, Librarian, Borrowing</h2>
    <div class="row">
        <!-- Card 1 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow h-100 hover-shadow">
                <img src="/images/student.jpg" class="card-img-top" alt="Students">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Manage Students</h5>
                    <p class="card-text">Manage students easiliy and efficiently, keep all student records.</p>
                    <a href="/Student/Index" class="btn btn-primary mt-auto">Manage Student</a>
                </div>
            </div>
        </div>

        <!-- Card 2 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow h-100 hover-shadow">
                <img src="/images/book1.jpg" class="card-img-top" alt="Books">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Manange Books</h5>
                    <p class="card-text">Manage books easiliy and efficiently, keep all accurate book records.</p>
                    <a href="/Book/Index" class="btn btn-primary mt-auto">Manage Book</a>
                </div>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow h-100 hover-shadow">
                <img src="/images/librarian.jpg" class="card-img-top" alt="Librarians">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Manage Librarians</h5>
                    <p class="card-text">Manage librarian easiliy and efficiently, keep all librarian records.</p>
                    <a href="/Librarian" class="btn btn-primary mt-auto">Manage Librarian</a>
                </div>
            </div>
        </div>
    </div>
</div>