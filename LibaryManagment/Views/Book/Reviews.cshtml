@model List<LibaryManagment.Models.ReviewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@using LibaryManagment
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Review_Mod_Title"];
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>üõ°Ô∏è @Localizer["Review_Mod_Header"]</h2>
        <a href="/Book/Index" class="btn btn-outline-secondary">@Localizer["Review_Mod_Btn_Back"]</a>
    </div>

    <div class="alert alert-warning">
        <strong>@Localizer["Review_Mod_Alert_Label"]</strong> @Localizer["Review_Mod_Alert_Body", ViewBag.BookName]
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered bg-white">
                <thead class="table-dark">
                    <tr>
                        <th>@Localizer["Review_Table_User"]</th>
                        <th>@Localizer["Review_Label_Rating"]</th>
                        <th>@Localizer["Review_Table_Content"]</th>
                        <th>@Localizer["Review_Table_Date"]</th>
                        <th>@Localizer["Book_Table_Header_Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in Model)
                    {
                        <tr>
                            <td class="fw-bold">@review.UserName</td>
                            <td class="text-warning">
                                @for (int i = 0; i < review.Rating; i++)
                                {
                                    <span>‚òÖ</span>
                                }
                            </td>
                            <td>@review.Content</td>
                            <td>@review.CreatedAt.ToString("g")</td>
                            <td>
                                <form asp-action="DeleteReview" method="post" style="display:inline;">
                                    <input type="hidden" name="reviewId" value="@review.ReviewId" />
                                    <input type="hidden" name="bookId" value="@ViewBag.BookId" />
                                    <button type="submit" class="btn btn-danger btn-sm" 
                                            onclick="return confirm('@Localizer["Review_Confirm_Delete"]');">
                                        <i class="fas fa-trash-alt"></i> @Localizer["Global_Btn_Delete"]
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h4 class="text-muted">@Localizer["Review_Mod_Empty_Title"]</h4>
            <p>@Localizer["Review_Mod_Empty_Desc"]</p>
        </div>
    }
</div>