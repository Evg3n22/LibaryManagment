@model LibaryManagment.Models.BookModel
@using Microsoft.AspNetCore.Mvc.Localization
@using LibaryManagment
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Book_Details_Title"];
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Book_Index_TabTitle"]</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.BookName</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (Model.BookImage != null && Model.BookImage.Length > 0)
                    {
                        var base64 = Convert.ToBase64String(Model.BookImage);
                        var imgSrc = $"data:image/jpeg;base64,{base64}";
                        <img src="@imgSrc" class="img-fluid rounded" alt="@Model.BookName" style="max-height: 500px; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="~/images/no-book-image.png" class="img-fluid rounded" alt="No image" style="max-height: 500px; object-fit: cover;" />
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["Book_Filter_Label_Availability"]</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>@Localizer["Book_Details_Label_AvailableCopies"]:</span>
                        <strong class="@(Model.CopiesAvailable > 0 ? "text-success" : "text-danger")">
                            @Model.CopiesAvailable / @Model.CopiesTotal
                        </strong>
                    </div>
                    @if (Model.CopiesAvailable > 0)
                    {
                        <span class="badge bg-success mt-2">@Localizer["Book_Filter_Option_Available"]</span>
                    }
                    else
                    {
                        <span class="badge bg-danger mt-2">@Localizer["Book_Status_NotAvailable"]</span>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@Model.BookName</h2>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h5>@Localizer["Book_Label_Author"]</h5>
                        <p>
                            <a asp-controller="Author" asp-action="Details" asp-route-id="@Model.AuthorID" 
                               class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-user"></i> @Model.AuthorName
                            </a>
                        </p>
                    </div>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6><i class="fas fa-calendar"></i> @Localizer["Book_Label_Year"]</h6>
                            <p>@Model.Year</p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-building"></i> @Localizer["Book_Label_Publisher"]</h6>
                            <p>@Model.Publisher</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6><i class="fas fa-tag"></i> @Localizer["Book_Filter_Label_Category"]</h6>
                            <p>
                                <span class="badge bg-secondary">@Model.CategoryName</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-hashtag"></i> @Localizer["Book_Card_Label_ID"]</h6>
                            <p>@Model.BookId</p>
                        </div>
                    </div>

                    <hr />

                    <div class="mb-3">
                        <h5><i class="fas fa-align-left"></i> @Localizer["Book_Label_Description"]</h5>
                        <p class="text-justify">@Model.BookDescription</p>
                    </div>

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> @Localizer["Global_Btn_Back"]
                        </a>
                        
                        @if (User.IsInRole("admin") || User.IsInRole("lib"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning">
                                <i class="fas fa-edit"></i> @Localizer["Global_Btn_Edit"]
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.BookId" class="btn btn-danger"
                               onclick="return confirm('@Localizer["Book_Confirm_Delete"]')">
                                <i class="fas fa-trash"></i> @Localizer["Global_Btn_Delete"]
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        @if (User.IsInRole("admin") || User.IsInRole("lib") || User.IsInRole("Student"))
        {
            <div class="row mt-5">
            <div class="col-md-12">
                <h3>üì¢ @Localizer["Review_Header_Title"]</h3>
                <hr />
                
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="card mb-4 bg-light">
                        <div class="card-body">
                            <h5 class="card-title">@Localizer["Review_Form_Title"]</h5>
                            <form asp-action="AddReview" method="post">
                                <input type="hidden" name="BookId" value="@Model.BookId" />
                                
                                <div class="row">
                                    <div class="col-md-2 mb-3">
                                        <label class="form-label">@Localizer["Review_Label_Rating"]</label>
                                        <select name="Rating" class="form-select">
                                            <option value="5">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê (5)</option>
                                            <option value="4">‚≠ê‚≠ê‚≠ê‚≠ê (4)</option>
                                            <option value="3">‚≠ê‚≠ê‚≠ê (3)</option>
                                            <option value="2">‚≠ê‚≠ê (2)</option>
                                            <option value="1">‚≠ê (1)</option>
                                        </select>
                                    </div>
                                    <div class="col-md-8 mb-3">
                                        <label class="form-label">@Localizer["Review_Label_Comment"]</label>
                                        <input name="Content" class="form-control" required placeholder="@Localizer["Review_Placeholder_Comment"]" />
                                    </div>
                                    <div class="col-md-2 mb-3 d-flex align-items-end">
                                        <button type="submit" class="btn btn-primary w-100">@Localizer["Review_Btn_Post"]</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        @Localizer["Review_Text_Please"] <a href="/Login/Login">@Localizer["Review_Link_Login"]</a> @Localizer["Review_Text_ToLeaveReview"]
                    </div>
                }

                @if (ViewBag.Reviews != null)
                {
                    var reviews = ViewBag.Reviews as List<LibaryManagment.Models.ReviewModel>;
                    if (reviews != null && reviews.Any())
                    {
                        foreach (var review in reviews)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            <i class="fas fa-user-circle"></i> @review.UserName
                                        </h6>
                                        <span class="text-warning">
                                            @for(int i=0; i<review.Rating; i++) { <span>‚òÖ</span> }
                                        </span>
                                    </div>
                                    <p class="card-text mt-2">@review.Content</p>
                                    <small class="text-muted">@Localizer["Review_Text_PostedOn", review.CreatedAt.ToString("yyyy-MM-dd HH:mm")]</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">@Localizer["Review_Text_Empty"]</p>
                    }
                }
            </div>
        </div>
        }
    </div>
</div>

<style>
    .text-justify {
        text-align: justify;
    }
</style>