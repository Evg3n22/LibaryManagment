@model LibaryManagment.Models.BookModel

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Books</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.BookName</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <!-- Book Image -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (Model.BookImage != null && Model.BookImage.Length > 0)
                    {
                        var base64 = Convert.ToBase64String(Model.BookImage);
                        var imgSrc = $"data:image/jpeg;base64,{base64}";
                        <img src="@imgSrc" class="img-fluid rounded" alt="@Model.BookName" style="max-height: 500px; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="~/images/no-book-image.png" class="img-fluid rounded" alt="No image" style="max-height: 500px; object-fit: cover;" />
                    }
                </div>
            </div>

            <!-- Availability Status -->
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Availability</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Available Copies:</span>
                        <strong class="@(Model.CopiesAvailable > 0 ? "text-success" : "text-danger")">
                            @Model.CopiesAvailable / @Model.CopiesTotal
                        </strong>
                    </div>
                    @if (Model.CopiesAvailable > 0)
                    {
                        <span class="badge bg-success mt-2">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger mt-2">Not Available</span>
                    }
                </div>
            </div>
        </div>

        <!-- Book Information -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@Model.BookName</h2>
                </div>
                <div class="card-body">
                    <!-- Author Information -->
                    <div class="mb-3">
                        <h5>Author</h5>
                        <p>
                            <a asp-controller="Author" asp-action="Details" asp-route-id="@Model.AuthorID" 
                               class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-user"></i> @Model.AuthorName
                            </a>
                        </p>
                    </div>

                    <hr />

                    <!-- Book Details -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6><i class="fas fa-calendar"></i> Publication Year</h6>
                            <p>@Model.Year</p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-building"></i> Publisher</h6>
                            <p>@Model.Publisher</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6><i class="fas fa-tag"></i> Category</h6>
                            <p>
                                <span class="badge bg-secondary">@Model.CategoryName</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-hashtag"></i> Book ID</h6>
                            <p>@Model.BookId</p>
                        </div>
                    </div>

                    <hr />

                    <!-- Description -->
                    <div class="mb-3">
                        <h5><i class="fas fa-align-left"></i> Description</h5>
                        <p class="text-justify">@Model.BookDescription</p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        
                        @if (User.IsInRole("admin") || User.IsInRole("lib"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.BookId" class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this book?')">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-justify {
        text-align: justify;
    }
</style>