@model LibaryManagment.Models.BookModel
@using Microsoft.AspNetCore.Mvc.Localization
@using LibaryManagment
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Book_Edit_Title"];
}

<h2>@Localizer["Book_Edit_Title"]</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="BookId" />

    <div class="mb-3">
        <label class="form-label">@Localizer["Book_Label_Title"]</label>
        <input asp-for="BookName" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["Book_Label_Author"]</label>
        <select asp-for="AuthorID" class="form-control" asp-items="@(new SelectList(ViewBag.Authors, "AuthorID", "AuthorName", Model.AuthorID))">
            <option value="">@Localizer["Book_Select_DefaultAuthor"]</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["Book_Label_CopiesAvailable"]</label>
        <input asp-for="CopiesAvailable" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["Book_Label_CopiesTotal"]</label>
        <input asp-for="CopiesTotal" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["Book_Label_Year"]</label>
        <input asp-for="Year" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["Book_Label_Publisher"]</label>
        <input asp-for="Publisher" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["Book_Label_Description"]</label>
        <textarea asp-for="BookDescription" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["Book_Label_CategoryID"]</label>
        <input asp-for="CategoryID" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["Book_Label_Image"]</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <small class="form-text text-muted">@Localizer["Global_Help_KeepImage"]</small>
    </div>

    <button type="submit" class="btn btn-primary">@Localizer["Global_Btn_Update"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Global_Btn_Cancel"]</a>
</form>