@model LibaryManagment.Models.BookModel

@{
    ViewData["Title"] = "Edit Book";
}

<h2>Edit Book</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="BookId" />

    <div class="mb-3">
        <label>Book Name</label>
        <input asp-for="BookName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Author</label>
        <input asp-for="AuthorName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Author ID</label>
        <input asp-for="AuthorID" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Copies Available</label>
        <input asp-for="CopiesAvailable" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label>Copies Total</label>
        <input asp-for="CopiesTotal" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label>Year</label>
        <input asp-for="Year" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label>Publisher</label>
        <input asp-for="Publisher" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="BookDescription" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Category ID</label>
        <input asp-for="CategoryID" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Book Image</label><br />
        @if (Model.BookImage != null && Model.BookImage.Length > 0)
        {
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.BookImage)" 
                 alt="Book Image" style="max-width: 150px; max-height: 200px;" />
            <br />
        }
        <input type="file" name="BookImage" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>