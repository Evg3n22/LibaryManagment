@model List<LibaryManagment.Models.StudentModel>

@{
    ViewData["Title"] = "Students";
}

<a class="btn btn-primary mt-3 ms-2" href="/Student/Create">Add New Student</a>

<table class="table table-bordered mt-3">
    <thead>
    <tr>
        <th>StudentID</th> <!-- Add this line -->
        <th>StudentName</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.StudentId</td> <!-- Add this line -->
            <td>@item.StudentName</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            @if (User.IsInRole("admin") || User.IsInRole("lib"))
            {
                <td>
                    <a class="btn btn-warning btn-sm" href="/Student/Edit/@item.StudentId">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Student/Delete/@item.StudentId" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            }
            
        </tr>
    }
    </tbody>
</table>