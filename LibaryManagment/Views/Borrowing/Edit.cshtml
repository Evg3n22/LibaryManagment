@model LibaryManagment.Models.BorrowingModel
@using Microsoft.AspNetCore.Mvc.Localization
@using LibaryManagment
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Borrowing_Edit_Title"];
}
<h2>@Localizer["Borrowing_Edit_Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="BorrowingId" />
    <div class="mb-3">
        <label for="StudentName" class="form-label">@Localizer["Borrowing_Table_Header_Student"]</label>
        <select asp-for="StudentName" class="form-control" asp-items="@(new SelectList(ViewBag.Students, Model.StudentName))">
            <option value="">@Localizer["Borrowing_Select_DefaultStudent"]</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="BookName" class="form-label">@Localizer["Borrowing_Table_Header_Book"]</label>
        <select asp-for="BookName" class="form-control" asp-items="@(new SelectList(ViewBag.Books, Model.BookName))">
            <option value="">@Localizer["Borrowing_Select_DefaultBook"]</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">@Localizer["Borrowing_Table_Header_BorrowDate"]</label>
        <input asp-for="BorrowDate" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">@Localizer["Borrowing_Table_Header_ReturnDate"]</label>
        <input asp-for="ReturnedDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["Global_Btn_Update"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Global_Btn_Cancel"]</a>
</form>