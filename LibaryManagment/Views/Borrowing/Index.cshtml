@model List<LibaryManagment.Models.BorrowingModel>

<!DOCTYPE html>
<html>
<head>
    <title>Borrowings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2>Book Borrowings</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                @TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                @TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (User.IsInRole("user") && ViewBag.UserQueue != null && ViewBag.UserQueue.Count > 0)
        {
            <div class="alert alert-info">
                <h4><i class="bi bi-clock-history"></i> You are in queue for the following books:</h4>
                <ul class="mb-0">
                    @foreach (var queue in ViewBag.UserQueue)
                    {
                        <li><strong>@queue.BookName</strong> - since @queue.RequestDate.ToString("dd.MM.yyyy HH:mm")</li>
                    }
                </ul>
            </div>
        }

        @if (User.IsInRole("admin") || User.IsInRole("lib"))
        {
            <div class="mb-3">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Issue a Book
                </a>
                <a asp-action="Queue" class="btn btn-info">
                    <i class="bi bi-people"></i> View Queue
                </a>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Student</th>
                        <th>Book</th>
                        <th>Borrow Date</th>
                        <th>Return Date</th>
                        <th>Status</th>
                        @if (User.IsInRole("admin") || User.IsInRole("lib"))
                        {
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No records found</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BorrowingId</td>
                                <td>@item.StudentName</td>
                                <td>@item.BookName</td>
                                <td>@item.BorrowDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (item.ReturnedDate.HasValue)
                                    {
                                        @item.ReturnedDate.Value.ToString("dd.MM.yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-danger fw-bold">Not Returned</span>
                                    }
                                </td>
                                <td>
                                    @if (item.ReturnedDate.HasValue)
                                    {
                                        <span class="badge bg-success">Returned</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Borrowed</span>
                                    }
                                </td>
                                @if (User.IsInRole("admin") || User.IsInRole("lib"))
                                {
                                    <td>
                                        <div class="btn-group" role="group">
                                            @if (!item.ReturnedDate.HasValue)
                                            {
                                                <a asp-action="Return" asp-route-id="@item.BorrowingId" 
                                                   class="btn btn-sm btn-success" 
                                                   title="Return Book">
                                                    <i class="bi bi-check-circle"></i> Return
                                                </a>
                                            }
                                            <a asp-action="Edit" asp-route-id="@item.BorrowingId" 
                                               class="btn btn-sm btn-warning" 
                                               title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.BorrowingId" 
                                               class="btn btn-sm btn-danger" 
                                               onclick="return confirm('Are you sure you want to delete this record?')"
                                               title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</body>
</html>