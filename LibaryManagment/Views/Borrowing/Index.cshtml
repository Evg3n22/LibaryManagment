@model List<LibaryManagment.Models.BorrowingModel>
@using Microsoft.AspNetCore.Mvc.Localization
@using LibaryManagment
@inject IHtmlLocalizer<SharedResource> Localizer

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name">
<head>
    <title>@Localizer["Borrowing_Index_Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="container mt-4">
        <h2>@Localizer["Borrowing_Index_Title"]</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                @TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                @TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (User.IsInRole("user") && ViewBag.UserQueue != null && ViewBag.UserQueue.Count > 0)
        {
            <div class="alert alert-info">
                <h4><i class="bi bi-clock-history"></i> @Localizer["Borrowing_Queue_UserMessage"]</h4>
                <ul class="mb-0">
                    @foreach (var queue in ViewBag.UserQueue)
                    {
                        <li><strong>@queue.BookName</strong> - @Localizer["Borrowing_Queue_Since"] @queue.RequestDate.ToString("dd.MM.yyyy HH:mm")</li>
                    }
                </ul>
            </div>
        }

        @if (User.IsInRole("admin") || User.IsInRole("lib"))
        {
            <div class="mb-3">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> @Localizer["Borrowing_Btn_Issue"]
                </a>
                <a asp-action="Queue" class="btn btn-info">
                    <i class="bi bi-people"></i> @Localizer["Borrowing_Btn_Queue"]
                </a>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>@Localizer["Borrowing_Table_Header_ID"]</th>
                        <th>@Localizer["Borrowing_Table_Header_Student"]</th>
                        <th>@Localizer["Borrowing_Table_Header_Book"]</th>
                        <th>@Localizer["Borrowing_Table_Header_BorrowDate"]</th>
                        <th>@Localizer["Borrowing_Table_Header_ReturnDate"]</th>
                        <th>@Localizer["Borrowing_Table_Header_Status"]</th>
                        @if (User.IsInRole("admin") || User.IsInRole("lib"))
                        {
                            <th>@Localizer["Student_Table_Header_Actions"]</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">@Localizer["Borrowing_Empty"]</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BorrowingId</td>
                                <td>@item.StudentName</td>
                                <td>@item.BookName</td>
                                <td>@item.BorrowDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (item.ReturnedDate.HasValue)
                                    {
                                        @item.ReturnedDate.Value.ToString("dd.MM.yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-danger fw-bold">@Localizer["Borrowing_Status_NotReturned"]</span>
                                    }
                                </td>
                                <td>
                                    @if (item.ReturnedDate.HasValue)
                                    {
                                        <span class="badge bg-success">@Localizer["Borrowing_Status_Returned"]</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">@Localizer["Borrowing_Status_Borrowed"]</span>
                                    }
                                </td>
                                @if (User.IsInRole("admin") || User.IsInRole("lib"))
                                {
                                    <td>
                                        <div class="btn-group" role="group">
                                            @if (!item.ReturnedDate.HasValue)
                                            {
                                                <a asp-action="Return" asp-route-id="@item.BorrowingId" 
                                                   class="btn btn-sm btn-success" 
                                                   title="@Localizer["Borrowing_Btn_Return"]">
                                                    <i class="bi bi-check-circle"></i> @Localizer["Borrowing_Btn_Return"]
                                                </a>
                                            }
                                            <a asp-action="Edit" asp-route-id="@item.BorrowingId" 
                                               class="btn btn-sm btn-warning" 
                                               title="@Localizer["Global_Btn_Edit"]">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.BorrowingId" 
                                               class="btn btn-sm btn-danger" 
                                               onclick="return confirm('@Localizer["Borrowing_Confirm_Delete"]')"
                                               title="@Localizer["Global_Btn_Delete"]">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>