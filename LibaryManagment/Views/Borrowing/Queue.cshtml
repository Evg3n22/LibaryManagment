@model List<LibaryManagment.Models.QueueModel>

<!DOCTYPE html>
<html>
<head>
    <title>Book Queue</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .queue-position {
            font-size: 1.2rem;
            font-weight: bold;
        }
        .first-in-queue {
            background-color: #fff3cd;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-people-fill"></i> Book Waiting Queue</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>

        @if (Model.Count == 0)
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
                <h4 class="mt-3">The queue is empty</h4>
                <p class="mb-0">There are currently no students waiting for books.</p>
            </div>
        }
        else
        {
            <div class="alert alert-primary">
                <i class="bi bi-info-circle"></i> 
                <strong>Total in queue:</strong> @Model.Count students
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 100px;">Position</th>
                            <th>Student</th>
                            <th>Book</th>
                            <th>Request Date</th>
                            <th>Waiting Time</th>
                            <th style="width: 120px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            int position = ViewBag.QueuePositions[item.QueueId.ToString()];
                            bool isFirst = position == 1;
                            TimeSpan waitingTime = DateTime.Now - item.RequestDate;
                            
                            <tr class="@(isFirst ? "first-in-queue" : "")">
                                <td class="text-center">
                                    @if (isFirst)
                                    {
                                        <span class="badge bg-success queue-position">
                                            <i class="bi bi-star-fill"></i> #@position
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary queue-position">#@position</span>
                                    }
                                </td>
                                <td>
                                    <strong>@item.StudentName</strong>
                                    @if (isFirst)
                                    {
                                        <span class="badge bg-success ms-2">Next</span>
                                    }
                                </td>
                                <td>
                                    <i class="bi bi-book"></i> @item.BookName
                                </td>
                                <td>@item.RequestDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @if (waitingTime.TotalDays >= 1)
                                    {
                                        <span class="text-danger fw-bold">
                                            @Math.Floor(waitingTime.TotalDays) days
                                        </span>
                                    }
                                    else if (waitingTime.TotalHours >= 1)
                                    {
                                        <span class="text-warning">
                                            @Math.Floor(waitingTime.TotalHours) hours
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            @Math.Floor(waitingTime.TotalMinutes) minutes
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="RemoveFromQueue" 
                                       asp-route-id="@item.QueueId" 
                                       class="btn btn-sm btn-danger" 
                                       onclick="return confirm('Are you sure you want to remove @item.StudentName from the queue for the book @item.BookName?')"
                                       title="Remove from queue">
                                        <i class="bi bi-trash"></i> Remove
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="alert alert-light border">
                <h5><i class="bi bi-lightbulb"></i> How the queue works:</h5>
                <ul class="mb-0">
                    <li>When a book is returned, it is automatically issued to the first student in the queue.</li>
                    <li>Students with the <span class="badge bg-success">Next</span> tag will receive the book first.</li>
                    <li>The yellow background indicates the student who will receive the book next.</li>
                </ul>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</body>
</html>