@model List<LibaryManagment.Models.QueueModel>

<!DOCTYPE html>
<html>
<head>
    <title>Черга на книги</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .queue-position {
            font-size: 1.2rem;
            font-weight: bold;
        }
        .first-in-queue {
            background-color: #fff3cd;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-people-fill"></i> Черга очікування на книги</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Назад до списку
            </a>
        </div>

        @if (Model.Count == 0)
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
                <h4 class="mt-3">Черга порожня</h4>
                <p class="mb-0">Наразі немає студентів, які очікують на книги</p>
            </div>
        }
        else
        {
            <div class="alert alert-primary">
                <i class="bi bi-info-circle"></i> 
                <strong>Всього в черзі:</strong> @Model.Count студентів
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 100px;">Позиція</th>
                            <th>Студент</th>
                            <th>Книга</th>
                            <th>Дата запиту</th>
                            <th>Час очікування</th>
                            <th style="width: 120px;">Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            int position = ViewBag.QueuePositions[item.QueueId.ToString()];
                            bool isFirst = position == 1;
                            TimeSpan waitingTime = DateTime.Now - item.RequestDate;
                            
                            <tr class="@(isFirst ? "first-in-queue" : "")">
                                <td class="text-center">
                                    @if (isFirst)
                                    {
                                        <span class="badge bg-success queue-position">
                                            <i class="bi bi-star-fill"></i> #@position
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary queue-position">#@position</span>
                                    }
                                </td>
                                <td>
                                    <strong>@item.StudentName</strong>
                                    @if (isFirst)
                                    {
                                        <span class="badge bg-success ms-2">Наступний</span>
                                    }
                                </td>
                                <td>
                                    <i class="bi bi-book"></i> @item.BookName
                                </td>
                                <td>@item.RequestDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @if (waitingTime.TotalDays >= 1)
                                    {
                                        <span class="text-danger fw-bold">
                                            @Math.Floor(waitingTime.TotalDays) днів
                                        </span>
                                    }
                                    else if (waitingTime.TotalHours >= 1)
                                    {
                                        <span class="text-warning">
                                            @Math.Floor(waitingTime.TotalHours) годин
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            @Math.Floor(waitingTime.TotalMinutes) хвилин
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="RemoveFromQueue" 
                                       asp-route-id="@item.QueueId" 
                                       class="btn btn-sm btn-danger" 
                                       onclick="return confirm('Ви впевнені, що хочете видалити @item.StudentName зі черги на книгу @item.BookName?')"
                                       title="Видалити зі черги">
                                        <i class="bi bi-trash"></i> Видалити
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="alert alert-light border">
                <h5><i class="bi bi-lightbulb"></i> Як працює черга:</h5>
                <ul class="mb-0">
                    <li>Коли книга повертається, вона автоматично видається першому студенту в черзі</li>
                    <li>Студенти з позначкою <span class="badge bg-success">Наступний</span> отримають книгу першими</li>
                    <li>Жовтий фон вказує на студента, який отримає книгу наступним</li>
                </ul>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</body>
</html>