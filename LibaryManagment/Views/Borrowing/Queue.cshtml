@model List<LibaryManagment.Models.QueueModel>
@using Microsoft.AspNetCore.Mvc.Localization
@using LibaryManagment
@inject IHtmlLocalizer<SharedResource> Localizer

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name">
<head>
    <title>@Localizer["Queue_Page_Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .queue-position {
            font-size: 1.2rem;
            font-weight: bold;
        }
        .first-in-queue {
            background-color: #fff3cd;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-people-fill"></i> @Localizer["Queue_Header_Title"]</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> @Localizer["Global_Btn_Back"]
            </a>
        </div>

        @if (Model.Count == 0)
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
                <h4 class="mt-3">@Localizer["Queue_Empty_Title"]</h4>
                <p class="mb-0">@Localizer["Queue_Empty_Text"]</p>
            </div>
        }
        else
        {
            <div class="alert alert-primary">
                <i class="bi bi-info-circle"></i> 
                <strong>@Localizer["Queue_Text_Total", Model.Count]</strong>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 100px;">@Localizer["Queue_Table_Position"]</th>
                            <th>@Localizer["Borrowing_Table_Header_Student"]</th>
                            <th>@Localizer["Borrowing_Table_Header_Book"]</th>
                            <th>@Localizer["Queue_Table_RequestDate"]</th>
                            <th>@Localizer["Queue_Table_WaitingTime"]</th>
                            <th style="width: 120px;">@Localizer["Book_Table_Header_Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            int position = ViewBag.QueuePositions[item.QueueId.ToString()];
                            bool isFirst = position == 1;
                            TimeSpan waitingTime = DateTime.Now - item.RequestDate;
                            
                            <tr class="@(isFirst ? "first-in-queue" : "")">
                                <td class="text-center">
                                    @if (isFirst)
                                    {
                                        <span class="badge bg-success queue-position">
                                            <i class="bi bi-star-fill"></i> #@position
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary queue-position">#@position</span>
                                    }
                                </td>
                                <td>
                                    <strong>@item.StudentName</strong>
                                    @if (isFirst)
                                    {
                                        <span class="badge bg-success ms-2">@Localizer["Queue_Badge_Next"]</span>
                                    }
                                </td>
                                <td>
                                    <i class="bi bi-book"></i> @item.BookName
                                </td>
                                <td>@item.RequestDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @if (waitingTime.TotalDays >= 1)
                                    {
                                        <span class="text-danger fw-bold">
                                            @Math.Floor(waitingTime.TotalDays) @Localizer["Global_Time_Days"]
                                        </span>
                                    }
                                    else if (waitingTime.TotalHours >= 1)
                                    {
                                        <span class="text-warning">
                                            @Math.Floor(waitingTime.TotalHours) @Localizer["Global_Time_Hours"]
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            @Math.Floor(waitingTime.TotalMinutes) @Localizer["Global_Time_Minutes"]
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="RemoveFromQueue" 
                                       asp-route-id="@item.QueueId" 
                                       class="btn btn-sm btn-danger" 
                                       onclick="return confirm('@Localizer["Queue_Confirm_Remove", item.StudentName, item.BookName]')"
                                       title="@Localizer["Global_Btn_Remove"]">
                                        <i class="bi bi-trash"></i> @Localizer["Global_Btn_Remove"]
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="alert alert-light border">
                <h5><i class="bi bi-lightbulb"></i> @Localizer["Queue_Help_Title"]</h5>
                <ul class="mb-0">
                    <li>@Localizer["Queue_Help_Bullet1"]</li>
                    <li>@Localizer["Queue_Help_Bullet2"]</li>
                    <li>@Localizer["Queue_Help_Bullet3"]</li>
                </ul>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</body>
</html>