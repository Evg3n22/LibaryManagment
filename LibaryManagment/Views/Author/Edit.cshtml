@model LibaryManagment.Models.AuthorModel
@using Microsoft.AspNetCore.Mvc.Localization
@using LibaryManagment
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Author_Edit_Title"];
}

<div class="container mt-4">
    <h2>@Localizer["Author_Edit_Title"]</h2>
    
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="AuthorID" type="hidden" />

        <div class="mb-3">
            <label asp-for="AuthorName" class="form-label">@Localizer["Author_Label_Name"]</label>
            <input asp-for="AuthorName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="BirthYear" class="form-label">@Localizer["Author_Label_BirthYear"]</label>
            <input asp-for="BirthYear" class="form-control" type="number" required />
        </div>

        <div class="mb-3">
            <label asp-for="Country" class="form-label">@Localizer["Author_Label_Country"]</label>
            <input asp-for="Country" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="AuthorDescription" class="form-label">@Localizer["Author_Label_Description"]</label>
            <textarea asp-for="AuthorDescription" class="form-control" rows="4"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">@Localizer["Author_Label_CurrentImage"]</label>
            @if (Model.AuthorImage != null && Model.AuthorImage.Length > 0)
            {
                <div>
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.AuthorImage)" 
                         alt="@Model.AuthorName" 
                         style="max-width: 200px; max-height: 200px; object-fit: cover; border-radius: 5px;" />
                </div>
            }
            else
            {
                <p>@Localizer["Author_Text_NoImage"]</p>
            }
        </div>

        <div class="mb-3">
            <label asp-for="ImageFile" class="form-label">@Localizer["Author_Label_ChangeImage"]</label>
            <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
            <small class="form-text text-muted">@Localizer["Global_Help_KeepImage"]</small>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-success">@Localizer["Global_Btn_Update"]</button>
            <a asp-action="Index" class="btn btn-secondary">@Localizer["Global_Btn_Cancel"]</a>
        </div>
    </form>
</div>