@model LibaryManagment.Models.AuthorModel

@{
    ViewData["Title"] = "Author Details";
    var books = ViewBag.Books as List<LibaryManagment.Models.BookModel>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Authors</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.AuthorName</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <!-- Author Image -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (Model.AuthorImage != null && Model.AuthorImage.Length > 0)
                    {
                        var base64 = Convert.ToBase64String(Model.AuthorImage);
                        var imgSrc = $"data:image/jpeg;base64,{base64}";
                        <img src="@imgSrc" class="img-fluid rounded-circle" alt="@Model.AuthorName" 
                             style="max-height: 300px; max-width: 300px; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="~/images/no-author-image.png" class="img-fluid rounded-circle" alt="No image" 
                             style="max-height: 300px; max-width: 300px; object-fit: cover;" />
                    }
                    <h3 class="mt-3">@Model.AuthorName</h3>
                </div>
            </div>

            <!-- Author Info Card -->
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Quick Info</h5>
                    <div class="mb-2">
                        <i class="fas fa-calendar-alt"></i> <strong>Birth Year:</strong> @Model.BirthYear
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-globe"></i> <strong>Country:</strong> @Model.Country
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-book"></i> <strong>Books in Library:</strong> @(books?.Count ?? 0)
                    </div>
                </div>
            </div>
        </div>

        <!-- Author Information -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">About @Model.AuthorName</h2>
                </div>
                <div class="card-body">
                    <!-- Biography -->
                    <div class="mb-4">
                        <h5><i class="fas fa-info-circle"></i> Biography</h5>
                        <p class="text-justify">@Model.AuthorDescription</p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="mb-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        
                        @if (User.IsInRole("admin") || User.IsInRole("lib"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.AuthorID" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.AuthorID" class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this author?')">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Books by this Author -->
            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-books"></i> Books by @Model.AuthorName</h4>
                </div>
                <div class="card-body">
                    @if (books != null && books.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Book Title</th>
                                        <th>Year</th>
                                        <th>Publisher</th>
                                        <th>Availability</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var book in books)
                                    {
                                        <tr>
                                            <td>@book.BookName</td>
                                            <td>@book.Year</td>
                                            <td>@book.Publisher</td>
                                            <td>
                                                @if (book.CopiesAvailable > 0)
                                                {
                                                    <span class="badge bg-success">Available (@book.CopiesAvailable)</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Not Available</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId" 
                                                   class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i> No books by this author in the library yet.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-justify {
        text-align: justify;
    }
</style>