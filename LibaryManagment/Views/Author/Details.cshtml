@model LibaryManagment.Models.AuthorModel
@using Microsoft.AspNetCore.Mvc.Localization
@using LibaryManagment
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Author_Details_Title"];
    var books = ViewBag.Books as List<LibaryManagment.Models.BookModel>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Author_Index_Title"]</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.AuthorName</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (Model.AuthorImage != null && Model.AuthorImage.Length > 0)
                    {
                        var base64 = Convert.ToBase64String(Model.AuthorImage);
                        var imgSrc = $"data:image/jpeg;base64,{base64}";
                        <img src="@imgSrc" class="img-fluid rounded-circle" alt="@Model.AuthorName" 
                             style="max-height: 300px; max-width: 300px; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="~/images/no-author-image.png" class="img-fluid rounded-circle" alt="No image" 
                             style="max-height: 300px; max-width: 300px; object-fit: cover;" />
                    }
                    <h3 class="mt-3">@Model.AuthorName</h3>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["Author_Details_Label_QuickInfo"]</h5>
                    <div class="mb-2">
                        <i class="fas fa-calendar-alt"></i> <strong>@Localizer["Author_Label_BirthYear"]:</strong> @Model.BirthYear
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-globe"></i> <strong>@Localizer["Author_Label_Country"]:</strong> @Model.Country
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-book"></i> <strong>@Localizer["Author_Details_Label_BooksCount"]:</strong> @(books?.Count ?? 0)
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@Localizer["Author_Details_Header_About", Model.AuthorName]</h2>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5><i class="fas fa-info-circle"></i> @Localizer["Author_Details_Label_Biography"]</h5>
                        <p class="text-justify">@Model.AuthorDescription</p>
                    </div>

                    <div class="mb-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> @Localizer["Global_Btn_Back"]
                        </a>
                        
                        @if (User.IsInRole("admin") || User.IsInRole("lib"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.AuthorID" class="btn btn-warning">
                                <i class="fas fa-edit"></i> @Localizer["Global_Btn_Edit"]
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.AuthorID" class="btn btn-danger"
                               onclick="return confirm('@Localizer["Author_Confirm_Delete"]')">
                                <i class="fas fa-trash"></i> @Localizer["Global_Btn_Delete"]
                            </a>
                        }
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-books"></i> @Localizer["Author_Details_Header_BooksBy", Model.AuthorName]</h4>
                </div>
                <div class="card-body">
                    @if (books != null && books.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Book_Table_Header_Title"]</th>
                                        <th>@Localizer["Book_Table_Header_Year"]</th>
                                        <th>@Localizer["Book_Table_Header_Publisher"]</th>
                                        <th>@Localizer["Book_Table_Header_Availability"]</th>
                                        <th>@Localizer["Book_Table_Header_Actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var book in books)
                                    {
                                        <tr>
                                            <td>@book.BookName</td>
                                            <td>@book.Year</td>
                                            <td>@book.Publisher</td>
                                            <td>
                                                @if (book.CopiesAvailable > 0)
                                                {
                                                    <span class="badge bg-success">@Localizer["Book_Status_Available", book.CopiesAvailable]</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">@Localizer["Book_Status_NotAvailable"]</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId" 
                                                   class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye"></i> @Localizer["Global_Btn_View"]
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i> @Localizer["Author_Details_NoBooks"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-justify {
        text-align: justify;
    }
</style>