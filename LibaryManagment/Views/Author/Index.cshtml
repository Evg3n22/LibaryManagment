@model List<LibaryManagment.Models.AuthorModel>

@{
    ViewData["Title"] = "Authors";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Authors</h2>
        @if (User.IsInRole("admin") || User.IsInRole("lib"))
        {
            <a asp-action="Create" class="btn btn-primary">Add New Author</a>
        }
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Image</th>
                <th>Author Name</th>
                <th>Birth Year</th>
                <th>Country</th>
                <th>Description</th>
                @if (User.IsInRole("admin") || User.IsInRole("lib"))
                {
                    <th>Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>
                        @if (author.AuthorImage != null && author.AuthorImage.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(author.AuthorImage)" 
                                 alt="@author.AuthorName" 
                                 style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;" />
                        }
                        else
                        {
                            <div style="width: 50px; height: 50px; background-color: #ddd; border-radius: 5px; display: flex; align-items: center; justify-content: center;">
                                <span>No Image</span>
                            </div>
                        }
                    </td>
                    <td>@author.AuthorName</td>
                    <td>@author.BirthYear</td>
                    <td>@author.Country</td>
                    <td>@(author.AuthorDescription?.Length > 50 ? author.AuthorDescription.Substring(0, 50) + "..." : author.AuthorDescription)</td>
                    
                    <td>
                    @if (User.IsInRole("admin") || User.IsInRole("lib"))
                    {
                        <a asp-action="Edit" asp-route-id="@author.AuthorID" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@author.AuthorID" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this author?');">Delete</a>
                    }
                        <a asp-action="Details"  asp-route-id="@author.AuthorID" class="btn btn-info btn-sm">View Details</a>
                        </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>