@model LibaryManagment.Models.LoginModel;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login - Library Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-icon">
                    <i class="fas fa-user-shield"></i>
                </div>
                <h1 class="login-title">Login</h1>
                <p class="login-subtitle">Увійдіть до системи управління бібліотекою</p>
            </div>

            <!-- This form preserves the original ASP.NET MVC structure -->
            <form method="POST" action="/Login/Verify" id="loginForm">
                <div class="form-group has-icon">
                    <label for="username" class="form-label">Username:</label>
                    <div style="position: relative;">
                        <input type="text" class="form-control" id="username" name="username" placeholder="Введіть ваш username" required>
                        <i class="fas fa-user input-icon"></i>
                    </div>
                </div>

                <div class="form-group has-icon">
                    <label for="password" class="form-label">Password:</label>
                    <div style="position: relative;">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Введіть ваш пароль" required>
                        <i class="fas fa-lock input-icon"></i>
                    </div>
                </div>

                <div class="remember-forgot">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="remember-me" name="remember-me">
                        <label class="form-check-label" for="remember-me">
                            Запам'ятати мене
                        </label>
                    </div>
                    <a href="#" class="forgot-link">Забули пароль?</a>
                </div>

                <button type="submit" class="submit-btn" name="Submit">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Увійти
                </button>

                <!-- Error message placeholder -->
                <div id="errorMessage" class="error-message" style="display: none;">
                    <!-- ViewBag.message would be displayed here -->
                </div>
            </form>

            <div class="footer-text">
                © 2025 Library Management System
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
        // Simple form handling
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('loginForm');
            const submitBtn = document.querySelector('.submit-btn');
            
            form.addEventListener('submit', function(e) {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Входимо...';
                submitBtn.disabled = true;
                
                // Re-enable button after 3 seconds as fallback
                setTimeout(() => {
                    submitBtn.innerHTML = '<i class="fas fa-sign-in-alt me-2"></i>Увійти';
                    submitBtn.disabled = false;
                }, 3000);
            });
            
            // Simple error message display function
            function showErrorMessage(message) {
                const errorDiv = document.getElementById('errorMessage');
                errorDiv.textContent = message;
                errorDiv.style.display = 'block';
            }
            
            // Example usage: showErrorMessage('Невірний логін або пароль');
        });
    </script>
</body>
</html>